<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "domain.Student" table = "student">

        <meta attribute = "class-description">
            This class contains the student details.
        </meta>

        <property name = "id" column="id" type ="string"/>
        <property name = "name" column = "name" type = "string"/>
        <property name = "group" column = "grupa" type = "int"/>
        <property name = "email" column = "email" type = "string"/>
        <property name = "teacher" column = "teacher" type = "string"/>

    </class>
</hibernate-mapping>